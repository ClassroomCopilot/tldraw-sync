{
	"extends": "./tsconfig.base.json",
	"include": ["src", "scripts", "vite.config.mts"],
	"exclude": ["node_modules", "dist", ".tsbuild*"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"types": ["bun-types", "node"],
		"strict": true,
		"skipLibCheck": true
	}
}
